<app:MetroWindow x:Class="Percentage.App.DetailsWindow"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:app="clr-namespace:Percentage.App"
                          mc:Ignorable="d"
                          Title="Battery Details"
                          SizeToContent="WidthAndHeight"
                          WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="0,5" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Battery Capacity"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   x:Name="Percentage"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Charge Rate"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   x:Name="ChargeRate"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Power Line Status"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   x:Name="PowerLineStatus"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Time Until Full"
                   x:Name="TimeLabel"
                   x:FieldModifier="private"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="3"
                   Grid.Column="1"
                   x:Name="TimeValue"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="Design Capacity"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="4"
                   Grid.Column="1"
                   x:Name="DesignCapacity"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="Full Charge Capacity"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="5"
                   Grid.Column="1"
                   x:Name="FullChargeCapacity"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="Remaining Charge Capacity"
                   FontWeight="SemiBold"
                   Margin="0,0,32,0" />
        <TextBlock Grid.Row="6"
                   Grid.Column="1"
                   x:Name="RemainingChargeCapacity"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   Text="Battery Status"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="7"
                   Grid.Column="1"
                   x:Name="Status"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="8"
                   Grid.Column="0"
                   Text="Battery Health"
                   FontWeight="SemiBold" />
        <TextBlock Grid.Row="8"
                   Grid.Column="1"
                   x:Name="Health"
                   x:FieldModifier="private" />
        <TextBlock Grid.Row="9"
                   Grid.Column="0"
                   FontSize="13"
                   HorizontalAlignment="left"
                   VerticalAlignment="Bottom"
                   Margin="0,10,0,5">
            <Hyperlink TextDecorations="None"
                       Click="OnSettingsClick">
                Settings
            </Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="10"
                   Grid.Column="0"
                   FontSize="13"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom">
            <Hyperlink TextDecorations="None"
                       Click="OnFeedbackClick">
                Send a feedback
            </Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="10"
                   Grid.Column="1"
                   FontSize="13"
                   HorizontalAlignment="left"
                   VerticalAlignment="Bottom">
            <Hyperlink TextDecorations="None"
                       Click="OnRatingClick">
                Rate this app
            </Hyperlink>
        </TextBlock>
    </Grid>
</app:MetroWindow>